<div style="margin-top:30px;"></div>

<script>
    $("#btnTimKiem").click(function(){
        $(".datasp").empty();
        $.ajax({
            url: "<%=domain%>/sanphams/ten/"+$("#inputTK").val(),
            method: "GET",
            error: function() {
                $('#info').html('<h2>Máy chủ bị lỗi, Xin vui lòng quay lại sau. Xin cảm ơn :))</h2>');
            },
            success: function(data) {
                $.each(data.Items, function(i, item) {
                    var html_to_append ='';
                    html_to_append +=
                        '<div class="col-6 col-sm-6 col-md-3 lazyitem d-flex">' +
                        '<a id="SP'+item.ID_SanPham+'" href="/SanPhams/'+item.ID_SanPham+'" class="card" style="margin-bottom: 1rem">'+
                        '<img id="subSP'+item.ID_SanPham+'" class="card-img-top" src="'+item.Anh.Avatar+'" alt="Card image cap" >'+
                        '<div class="card-body">'+
                        '<h5 class="card-title" style="height: 2rem" >'+item.TenSanPham+'</h5>'+
                        '<br>'+
                        ' <p class="card-text badge badge-pill badge-success">'+item.Gia+' VND</p>'+
                        '</div>'+
                        '</a>'+
                        '</div>';
                    $("#datasp").append(html_to_append);
                });
                itemHover();
            }
        });
        return false;
    });
</script>