<% layout('../Layout/layoutKhachHang.ejs') -%>

<%- partial('../ThanhPhanWeb/Carousel.ejs') %>
<script src="https://hqk.s3.us-west-1.amazonaws.com/JS/bootstrap-input-spinner.js"></script>
<div class="container" style="padding-top: 1rem">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><i class="fas fa-store"></i> HQKStore</a></li>
                <li class="breadcrumb-item"><a href="/">Sản Phẩm</a></li>
                <li id="tbTenSanPham" class="breadcrumb-item active" aria-current="page"> <%= spData.TenSanPham %> </li>
            </ol>
        </nav>
    </div>


    <div class="col-12">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-5 col-lg-4 col-xl-4 ">
                <div id="carousel-container_SP" class="border border-secondary">
                    <div id="SPCarouselCT" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#SPCarouselCT" class="carousel-slider" data-slide-to="0"></li>
                            <li data-target="#SPCarouselCT" class="carousel-slider" data-slide-to="1"></li>
                            <li data-target="#SPCarouselCT" class="carousel-slider" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item  active">
                                <img id="tbAnh" class="d-block w-100 " src="<%= spData.Anh.Avatar %>">
                                <div class="carousel-caption d-none d-md-block">
                                </div>
                            </div>
                            <div class="carousel-item ">
                                <img class="d-block w-100 " src="<%= spData.Anh.AvtDetail1 %>">
                                <div class="carousel-caption d-none d-md-block">
                                </div>
                            </div>
                            <div class="carousel-item ">
                                <img class="d-block w-100 " src="<%= spData.Anh.AvtDetail2 %>">
                                <div class="carousel-caption d-none d-md-block">
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev carousel-SP-next" href="#SPCarouselCT" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon " aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next carousel-SP-prev" href="#SPCarouselCT" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-7 col-lg-8 col-xl-8">
                <div class="row">
                    <div class="col">
                        <h1 class="text-primary"> <%= spData.TenSanPham %></h1>

                        <h1> Giá cũ:<span class="card-text text-secondary itemPrice"> <del><%= spData.Gia %> Đ</del></span>
                        </h1>
                        <h1> Giá hiện tại: <span
                                    class="badge badge-pill badge-success itemPrice"><%= spData.Gia - (spData.Gia / 100 * spData.TiLeSale) %> Đ</span>
                        </h1>
                        <hr>
                        <h5 class="text-secondary"> <%= spData.MoTa.TongQuan %></h5>
                        <hr>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-4">
                        <div class="dropdown">
                            <select class="form-control" id="dropDownSize">
                                <option id="0">Vui lòng chọn size</option>
                                <% listSize.forEach(function (item) { %>
                                    <option id="<%= item.ID_Size %>" value="<%= item.SoLuong %>"
                                            class="itemSize"><%= item.TenSize %></option>
                                <% }); %>
                                <!--List size được load vào đây-->
                            </select>
                            <br>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-5">
                        <input id="inputSoLuong" class="col-lg-3 tbSoLuong " type="number" value="0" min="0" max="100"
                               step="1" disabled/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <br>
                        <button id="btnThanhToan" type="button"
                                class="col-sm-4 col-lg-4 btn btn-lg btn-success d-inline"><i
                                    class="fas fa-money-check-alt"></i> Thanh toán
                        </button>
                        <button id="btnThemVaoGio" type="button" class="col-sm-4 col-lg-4 btn btn-lg btn-info d-inline">
                            <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                        </button>
                    </div>

                </div>

            </div>
        </div>

    </div>
    <br>
    <div class="col-12">

        <br>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#home">Mô tả</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#menu1">Thông tin</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#menu2">Bình luận</a>
            </li>

        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div id="home" class="container tab-pane active"><br>

                <p><%- spData.MoTa.ChiTiet %></p>
            </div>
            <div id="menu1" class="container tab-pane fade"><br>
                <p><span class="font-weight-bold">Nơi Sản Xuất:</span> <%= spData.ThongTin.NoiSanXuat %></p>
                <p><span class="font-weight-bold">Chế độ bảo hành:</span> <%= spData.ThongTin.CheDoBaoHanh %></p>
                <p><span class="font-weight-bold">Phụ kiện theo kèm:</span> <%= spData.ThongTin.PhuKienTheoKem %></p>
            </div>
            <div id="menu2" class="container tab-pane fade"><br>
                <div class="fb-comments"
                     data-href="http://hqkclient.us-west-1.elasticbeanstalk.com/SanPhams/<%= spData.ID_SanPham %>"
                     data-width="6000px" data-numposts="5"></div>
            </div>
        </div>

    </div>
</div>
<script>
    $("document").ready(function () {
        FormartGia();
    });

    $("input[type='number']").inputSpinner();

    var idSP = "<%= spData.ID_SanPham %>";
    var idSize = "0";
    var tenSize;
    var SoLuong = 0;
    var $soLuong = $("#inputSoLuong");
    var gioHang =[];

    $soLuong.on("change", function (event) {
        SoLuong = parseInt($soLuong.val());
        $("#val").html(SoLuong);
    });
    $soLuong.on("input", function (event) {
        SoLuong = parseInt($soLuong.val());
        $("#val").html(SoLuong);
    });

    // Ngăn người dùng nhập chữ vào input số lượng
    (function ($) {
        $.fn.inputFilter = function (inputFilter) {
            return this.on("input keydown keyup mousedown mouseup select contextmenu drop", function () {
                if (inputFilter(this.value)) {
                    this.oldValue = this.value;
                    this.oldSelectionStart = this.selectionStart;
                    this.oldSelectionEnd = this.selectionEnd;
                } else if (this.hasOwnProperty("oldValue")) {
                    this.value = this.oldValue;
                    this.setSelectionRange(this.oldSelectionStart, this.oldSelectionEnd);
                }
            });
        };
    }(jQuery));
    $(document).ready(function () {
        // Restrict input to digits by using a regular expression filter.
        $(".tbSoLuong").inputFilter(function (value) {
            return /^\d*$/.test(value);
        });
    });



    $('body').on('change', '#dropDownSize', function (e) {
        idSize = $(e.target).find("option:selected").attr("id");
        tenSize = $(e.target).find("option:selected").text();
        $(".tbSoLuong").prop("disabled", false);
       /*  alert(idSize);*/
    });

    $('body').on('change', '#inputSoLuong', function (e) {
        soLuong = parseInt($(e.target).find("option:selected").attr("value"));
        // $(".tbSoLuong").prop("disabled", false);
        // alert(soLuong);
    });

    //Lưu giỏ hàng vào cookie
    $('body').on('click', '#btnThemVaoGio', function () {

        if (SoLuong == 0 || idSize == "0") {
            toastr["error"]("Vui lòng chọn size và số lượng trước khi đặt hàng !");
        }
        else {
            $.ajax({
                url: "<%= domain %>/SanPhams/qlsp/admin/kiemtrasize/sp?idsize="+idSize+"&soluong="+SoLuong+"&token=" + $.cookie("token"),
                method: "GET",
                error: function () {
                    toastr["success"]("Lỗi máy chủ !");
                },
                success: function (data) {
                 if(data.status == "ok"){
                     ThemSPVaoGio();
                 }
                 else {
                     toastr["error"](data.message);
                 }
                }
            });
            return false;
        }
    });


    //Lưu giỏ hàng vào cookie
    $('body').on('click', '#btnThanhToan', function (e) {
        if (SoLuong == 0 || idSize == "0") {
            toastr["error"]("Vui lòng chọn size và số lượng trước khi thanh toán !");
        }
        else {
            $.ajax({
                url: "<%= domain %>/SanPhams/qlsp/admin/kiemtrasize/sp?idsize="+idSize+"&soluong="+SoLuong+"&token=" + $.cookie("token"),
                method: "GET",
                error: function () {
                    toastr["success"]("Lỗi máy chủ !");
                },
                success: function (data) {
                    if(data.status == "ok"){
                        ThemSPVaoGio();
                        window.location.replace("/SanPhams/ThanhToan/sp");
                    }
                    else {
                        toastr["error"](data.message);
                    }
                }
            });
        }
    });

    function ThemSPVaoGio() {
        if ($.cookie("gioHang") == null) {
            var sp = {ID_SanPham: idSP,TenSanPham:$("#tbTenSanPham").text() ,Anh:$("#tbAnh").attr("src") ,ID_Size:idSize,TenSize: tenSize,SoLuong: parseInt(SoLuong)};

            gioHang.push(sp);
            $.cookie("gioHang",JSON.stringify(gioHang), { path: '/' });
        }
        else if($.cookie("gioHang") != null){
            var count = 0;
            gioHang = JSON.parse($.cookie("gioHang"));
            gioHang.forEach(function(item, index) {
                if(item.ID_SanPham == idSP && item.ID_Size == idSize ){
                    gioHang[index] ={ID_SanPham: item.ID_SanPham, TenSanPham:item.TenSanPham, Anh:item.Anh, ID_Size:item.ID_Size, TenSize:item.TenSize, SoLuong: parseInt(SoLuong)};
                    count++;
                }
            });
            if(count == 0){
                var sp = {ID_SanPham: idSP, TenSanPham:$("#tbTenSanPham").text() ,Anh:$("#tbAnh").attr("src"), ID_Size:idSize, TenSize: tenSize,SoLuong:parseInt(SoLuong)};
                gioHang.push(sp);
                $.cookie("gioHang",JSON.stringify(gioHang), { path: '/' });
            }else if(count != 0){
                $.cookie("gioHang",JSON.stringify(gioHang), { path: '/' });
            }
        }
        toastr["success"]("Thêm sản phẩm vào giỏ thành công !");
        $.cookie("TongSoLuong",gioHang.length, { path: '/' });
        $("#TongSP").text($.cookie("TongSoLuong"));
    }


    $(document).ready(function () {
        $("img").attr("class","img-fluid");
    });
</script>
