    $('body').on('click', '.dropdown-item', function () {
        $(this).parent().parent().find(".tenSize").text($(this).text());
        /*alert($(this).text());*/
        $(".tbSoLuong").prop("disabled",false);
    });
    // Ngăn người dùng nhập chữ vào input số lượng
    (function($) {
        $.fn.inputFilter = function(inputFilter) {
            return this.on("input keydown keyup mousedown mouseup select contextmenu drop", function() {
                if (inputFilter(this.value)) {
                    this.oldValue = this.value;
                    this.oldSelectionStart = this.selectionStart;
                    this.oldSelectionEnd = this.selectionEnd;
                } else if (this.hasOwnProperty("oldValue")) {
                    this.value = this.oldValue;
                    this.setSelectionRange(this.oldSelectionStart, this.oldSelectionEnd);
                }
            });
        };
    }(jQuery));
    $(document).ready(function() {
        // Restrict input to digits by using a regular expression filter.
        $(".tbSoLuong").inputFilter(function(value) {
            return /^\d*$/.test(value);
        });
    });
    //Hàm fortmat giá cho sản phẩm
    function FormartGia() {
        $('.itemPrice').text(function () {
            var str = $(this).html() + '';
            x = str.split('.');
            x1 = x[0];
            x2 = x.length > 1 ? '.' + x[1] : '';
            var rgx = /(\d+)(\d{3})/;
            while (rgx.test(x1)) {
                x1 = x1.replace(rgx, '$1' + ',' + '$2');
            }
            $(this).html(x1 + x2);
        });
    }

    $("document").ready(function () {
        FormartGia();
    });
</script>

