            opacity: 1;
        }
        #content {
            height: 2000px;
        }
        .linksp:hover {
            text-decoration: none;
            color:#ffb520;
        }

        .jbtcustom{
            padding: 0.5rem;
        }
        .carousel-SP-next,
        .carousel-SP-prev {
            filter: invert(100%);
        }
    </style>
</head>

<body>

<!-- jQuery library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<!-- jQuery LazyLoad -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.lazyload/1.9.1/jquery.lazyload.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>

<!-- Boostrap library -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="/NguoiDung/Admin"><i class="fas fa-home"></i> HQKStore Admin</a>
    </button>
</nav>
<div style="margin-top:70px;"></div>


<div class="col row justify-content-sm-center ml-auto"style="margin: 15rem">

    <form id="formDN" class="form-signin" method="POST" action="/login">
        <h2 class="form-signin-heading"><p class="font-weight-bold text-primary">Trang Quản Lý HQKStore</p></h2>
        <br>
            <%if(typeof (err)!= 'undefined'){%>
        <div class="alert alert-danger" role="alert">
            <%=err%>
        </div>
            <%}%>
        <input name="userName" type="text" id="inputEmail" class="form-control" placeholder="Tài khoản" value="<%if(typeof (values)!= 'undefined'){%><%=values.userName.trim()%><%}%>"  required >
        <input name="passWord" type="password" id="inputPassword" class="form-control" placeholder="Mật khẩu" required style="margin-top:10px">
        <input name="check" type="text" id="checkValue" value="" style="display: none">
        <div class="checkbox">
            <label>
                <input id="checkBoxDN" type="checkbox" value=""> Ghi nhớ đăng nhập
            </label>
        </div>
        <button name="btnLogin" class="btn btn-lg btn-primary btn-block" type="submit" onclick="submitDangNhap()" ><i class="far fa-hand-point-up"></i> Đăng nhập</button>
    </form>
</div>

<%-partial('../ThanhPhanWeb/Footer')%>


<script>
    function submitDangNhap(){
        if ($("#checkBoxDN").is(":checked")){
            $("#checkValue").attr("value","yes");
            $("#formDN").submit();
        }
        else {
            $("#checkValue").attr("value","no");
            $("#formDN").submit();
        }
    }
</script>
</body>
</html>




