    <style>
        .footer-item-color{
            color: #337ab7;
        }
        /*Stye cho nút kéo lên.*/
        #back-to-top {
            text-align:center;
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 9999;
            padding: 7px;
            text-align: center;
            background-color: red;
            color: white;
            cursor: pointer;
            border: 0;
            border-radius: 5px;
