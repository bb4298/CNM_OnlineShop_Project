<% layout('../Layout/layoutAdmin.ejs') -%>
<div class="container">
    <div class="row-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin"><i class="fas fa-store"></i> HQKStore Admin</a></li>
                <li class="breadcrumb-item active" aria-current="page">Quản lý Sản phẩm</li>
            </ol>
        </nav>
    </div>

    <div class="row-fluid">
        <div class="co ml-auto ">
            <button type="button" class="btn btn-primary d-inline " data-toggle="modal" data-target="#modalThem" >
                Thêm sản phẩm
            </button>

            <form class="form-inline ml-auto d-inline float-right ">
                <input id="inputTK" class="form-control mr-sm-2" type="search" placeholder="Nhập tên sản phẩm" aria-label="Search">
                <button id="btnTimKiem" class="btn btn-outline-success my-2 my-sm-0" type="submit">Tìm kiếm</button>
            </form>
        </div>

    </div>

    <!-- The Modal Thêm sản phẩm-->
    <div class="modal fade" id="modalThem">
        <div class="modal-dialog modal-lg modal-lg modal-sm">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title"><i class="fas fa-store"></i> Thêm sản phẩm</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form action="/" class="was-validated">
                        <div class="form-group">
                            <label for="tbTenSanPham">Tên sản phẩm</label>
                            <input type="text" class="form-control" id="tbTenSanPham" placeholder="Nhập tên sản phẩm" name="tbTenSanPham" required>
                        </div>
                        <div class="form-group">
                            <label for="tbDanhMuc">Danh Mục</label>
                            <select class="form-control" id="tbDanhMuc" name="tbDanhMuc">
                                <option>Áo</option>
                                <option>Giày</option>
                                <option>Ba lô</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="tbThuongHieu">Thương Hiệu</label>
                            <select class="form-control" id="tbThuongHieu" name="tbThuongHieu">
                                <option>Vans</option>
                                <option>Converse</option>
                                <option>Palladium</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="tbGia">Giá</label>
                            <input type="text" class="form-control" id="tbGia" placeholder="Nhập giá" name="tbGia" required>
                        </div>
                        <div class="form-group">
                            <label for="tbTiLeSale">Tỉ lệ sale</label>
                            <input type="text" class="form-control" id="tbTiLeSale" placeholder="Nhập tỉ lệ sale" name="tbTiLeSale" required>
                        </div>
                        <div class="form-group">
                            <label for="TongSoLuong">Tổng số lượng</label>
                            <input type="text" class="form-control" id="TongSoLuong" placeholder="Nhập tổng số lượng" name="TongSoLuong" required>
                        </div>
                        <div class="form-group">
                            <label for="tbTongQuan">Mô tả tổng quan</label>
                            <input type="text" class="form-control" id="tbTongQuan" placeholder="Nhập mô tả tổng quan" name="tbTongQuan" required>
                        </div>
                        <div class="form-group">
                            <label for="tbChiTiet">Mô tả chi tiết</label>
                            <input type="text" class="form-control" id="tbChiTiet" placeholder="Nhập mô tả chi tiết" name="tbChiTiet" required>
                        </div>
                        <div class="form-group">
                            <label for="tbNoiSanXuat">Nơi sản xuất</label>
                            <input type="text" class="form-control" id="tbNoiSanXuat" placeholder="Nhập nơi sản xuất" name="tbNoiSanXuat" required>
                        </div>
                        <div class="form-group">
                            <label for="tbCDBH">Chế độ bảo hành</label>
                            <input type="text" class="form-control" id="tbCDBH" placeholder="Nhập chế độ bảo hành" name="tbCDBH" required>
                        </div>
                        <div class="form-group">
                            <label for="tbPKDK">Phụ kiện đi kèm</label>
                            <input type="text" class="form-control" id="tbPKDK" placeholder="Nhập phụ kiện đi kèm" name="tbPKDK" required>
                        </div>
                        <input type="submit" id="submit-form" style="display: none" />
                    </form>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <label class="btn btn-success"  tabindex="0">Xác nhận</label>
                    <label  class="btn btn-secondary" data-dismiss="modal">Hủy</label>
                </div>

            </div>
        </div>
    </div>
    <br><br>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Ảnh</th>
            <th scope="col">Giá</th>
            <th scope="col">Thao tác</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">5fdsfs54w</th>
            <td>Converse Sunflower 1970s</td>
            <td> <img src="https://bb4298.s3-us-west-1.amazonaws.com/SanPham/Giay/ChuckTaylor_AllStar1970s_Sunflower_Tall.jpg" style="height: 3rem;width: 3rem"> </td>
            <td>1.500.000</td>
            <td class=""><div class="btn btn-info "> Chi tiết </div> <div class="btn btn-warning "> Sửa </div>  <div class="btn btn-danger"> Xóa </div></td>
        </tr>
        <tr>
            <th scope="row">fsdfsd54</th>
            <td>Converse 1970s Black</td>
            <td> <img src="https://bb4298.s3-us-west-1.amazonaws.com/SanPham/Giay/ChuckTaylor_AllStar1970s_BlackLow_1.jpg" style="height: 3rem;width: 3rem"> </td>
            <td>1.650.000</td>
            <td class=""><div class="btn btn-info "> Chi tiết </div> <div class="btn btn-warning "> Sửa </div>  <div class="btn btn-danger"> Xóa </div></td>
        </tr>
        </tbody>
    </table>
